<%- include('../partials/header') %>
<div class="container">
    <div class="container">
        <div class="jumbotron">
            <h1>Campgrounds</h1>
            <p>View campgrounds that you may like!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">New Camp</a>
            </p>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap; wrap;">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img class="card-img-top" src="<%=campground.image%>">
                <div class="card-body">
                    <h4 class="card-title"><%=campground.name%></h4>
                </div>
                <!-- <p><%=campground._id%></p> -->
                <p>
                    <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">read more</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>


<%- include('../partials/footer') %>