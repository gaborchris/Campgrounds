<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1 style="justify-content: center">Edit <%=campground.name%></h1>
            <div style="width: 50%; margin: 25px auto;">
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" placeholder="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" placeholder="price" min="0.00" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>"placeholder="image url">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="campground[description]" placeholder="description"
                            rows="5"><%=campground.description%></textarea>
                        <!-- <input class="form-control" type="textarea"  placeholder="description"> -->
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-black">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
<%- include('../partials/footer') %>