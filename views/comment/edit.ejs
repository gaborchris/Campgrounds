<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1 style="justify-content: center">Edit Comment for <em><%=campground.name%></em></h1>
            <div style="width: 50%; margin: 25px auto;">
                <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text"
                            value="<%=comment.text%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-black">Submit!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>